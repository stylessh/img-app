<div class="row">

  <div class="col-md-4">
    <div class="card">
      <div class="card-body">

        <form action="/images/add" method="POST" enctype="multipart/form-data">

          <div class="form-group">
            <input type="text" name="title" class="form-control" placeholder="Image Title">
          </div>

          <div class="form-group">
            <textarea name="description" class="form-control" placeholder="Image Description"></textarea>
          </div>

          <div class="input-group mb-3">
            <div class="custom-file">
              <input type="file" name="image" class="custom-file-input" id="inputGroupFile01">
              <label for="inputGroupFile01" class="custom-file-label">Choose A Image</label>
            </div>
          </div>

          <button class="btn btn-primary" type="submit" name="button">
              Upload Photo
          </button>

        </form>
      </div>
    </div>
  </div>

  <div class="col-md-8">
    <table class="table">

        <thead>
          <th>Title</th>
          <th>Description</th>
          <th>Operation</th>
        </thead>

        <tbody>

          {{#each photos}}
            <tr>
              <td>{{title}}</td>
              <td>{{description}}</td>
              <td>
                <a href="{{imageURL}}" target="_blank" class="btn btn-primary">View</a>
                <a href="/images/delete/{{_id}}" class="btn btn-danger"
                onclick="return confirm('Are you sure you want to delete this item?');">Delete</a>
              </td>
            </tr>
          {{/each}}

        </tbody>

    </table>
  </div>

</div>
